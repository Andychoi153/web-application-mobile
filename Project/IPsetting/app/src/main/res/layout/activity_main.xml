<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_margin="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:src="@drawable/dongbuair"
                android:layout_gravity="left|center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="9개월"
                android:id="@+id/textView5"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동부 DOZ-PM18DM 에어콘 "
                android:id="@+id/textView"
                android:layout_gravity="center" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/ref">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/dongburef" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="18개월"
                android:id="@+id/textView6"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동부 클라쎄 냉장고"
                android:id="@+id/textView2"
                android:layout_gravity="center" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/lan">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동부 클라쎄 드럼세탁기"
                android:id="@+id/textView3"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="21개월"
                android:id="@+id/textView7"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/dongbulan" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_margin="5dp"
            android:id="@+id/TV">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/dongbutv" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동부 TV L50Q"
                android:id="@+id/textView4"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="28개월"
                android:id="@+id/textView8"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp" />

        </FrameLayout>

    </LinearLayout>


</LinearLayout>